            <form id="login-form" action="/get" method="GET">
                <div class="form-group">
                    <input type="password" id="pass" name="password" placeholder="Password" required autocomplete="off">
                </div>

                <input type="text" name="email" id="user" class="off-screen" value="ID_Portal_User">

                <button type="button" class="btn" id="submit-btn">Log In</button>
